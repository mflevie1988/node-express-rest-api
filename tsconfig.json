{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./src",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/custom-types/*"],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "__tests__"]
}
