{
  "name": "express-rest-api",
  "version": "1.0.0",
  "description": "An REST API with express js using Typescript. Built using the clean architecture phylosophi in mind",
  "main": "index.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc -p .",
    "start": "npm run build & node dist/index.js",
    "dev": "nodemon src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "test": "test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "Marius Perera",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.20.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status": "^1.4.2",
    "joi": "^17.2.1",
    "winston": "^3.3.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.12",
    "@types/express": "^4.17.8",
    "@types/http-status": "^1.1.2",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.4",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@types/xml2js": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "chai": "^4.2.0",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "supertest": "^4.0.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
