{
  "name": "express-rest-api",
  "version": "1.0.0",
  "description": "An REST API with express js using Typescript. Built using the clean architecture philosophy in mind",
  "main": "server.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "rm -rf ./dist/ && prettier --write ./src && tsc -p .",
    "start": "npm run build & env-cmd -e common,overrides -r local-env.js node dist/server.js",
    "start:dist": "node ./dist/server",
    "dev": "env-cmd -e common,overrides -r local-env.js nodemon src/server.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write ./src",
    "test": "test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "Marius Perera",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "dayjs": "^1.10.6",
    "express": "^4.17.1",
    "http-status": "^1.4.2",
    "joi": "^17.2.1",
    "winston": "^3.3.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.12",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/http-status": "^1.1.2",
    "@types/jest": "^26.0.15",
    "@types/jest-image-snapshot": "^4.1.2",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.4",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@types/xml2js": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "chai": "^4.2.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.3",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "jest-extended": "^0.11.5",
    "jest-image-snapshot": "^4.2.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
